@using Core.Enums
@if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == nameof(SortOrderOptions.DESC))
{
    <th>
        <a href="~/persons/index/?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(SortOrderOptions.ASC)">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-up"></i>
    </th>
}
else if (ViewBag.CurrentSortBy == ViewBag.ColumnName && ViewBag.CurrentSortOrder == nameof(SortOrderOptions.ASC))
{
    <th>
        <a href="~/persons/index/?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(SortOrderOptions.DESC)">
            @ViewBag.DisplayName
        </a>
        <i class="fa-solid fa-sort-down"></i>
    </th>
}
else if (ViewBag.CurrentSortBy != ViewBag.ColumnName)
{
    <th>
        <a href="~/persons/index/?searchBy=@(ViewBag.CurrentSearchBy)&searchString=@(ViewBag.CurrentSearchString)&sortBy=@(ViewBag.ColumnName)&sortOrder=@(SortOrderOptions.ASC)">
            @ViewBag.DisplayName
        </a>
    </th>
}